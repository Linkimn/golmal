<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:background="#000"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/back_img" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#FFA5CDE1"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/profile_male_img"
                        android:layout_width="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/tv_userName"
                        android:text="USER NAME"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/balance_icon"
                        android:layout_width="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/tv_coins"
                        android:text="100 COINS"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#FFA5CDE1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/refer_earn_icon"
                        android:layout_width="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/tv_refer_earn"
                        android:text="REFER EARN"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:background="#fff"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/todo_list"
                        android:layout_width="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/tv_todo_list"
                        android:text="TASK 1"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
